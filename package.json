{
  "name": "react-table-container",
  "version": "0.2.2",
  "description": "A React component container for the HTML <table> element that allows it to be of any specified dimensions while locking its header during scrolling",
  "license": "MIT",
  "repository": "github:tiagovtristao:react-table-container",
  "bugs": "https://github.com/tiagovtristao/react-table-container/issues",
  "keywords": [
    "react",
    "table",
    "container",
    "thead",
    "header",
    "fixed",
    "lock",
    "scroll"
  ],
  "author": "Tiago Tristao (https://github.com/tiagovtristao)",
  "main": "lib/react-table-container.js",
  "module": "es/react-table-container.js",
  "unpkg": "dist/react-table-container.js",
  "typings": "./index.d.ts",
  "files": [
    "lib",
    "es",
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib es dist",
    "build:commonjs": "rollup -c -f cjs -o lib/react-table-container.js",
    "build:es": "rollup -c -f es -o es/react-table-container.js",
    "build:umd": "rollup -c -f umd -g react:React -n ReactTableContainer -o dist/react-table-container.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd",
    "prepare": "npm run clean && npm run build",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json",
    "prettify": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/expect-puppeteer": "^2.2.4",
    "@types/jest": "^23.3.0",
    "@types/jest-environment-puppeteer": "^2.2.1",
    "@types/puppeteer": "^1.5.1",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.6",
    "chalk": "^2.4.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.4.1",
    "jest-environment-node": "^23.4.0",
    "jest-puppeteer": "^3.2.1",
    "mkdirp": "^0.5.1",
    "prettier": "^1.11.1",
    "puppeteer": "^1.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.1",
    "rollup-plugin-typescript2": "^0.8.4",
    "ts-jest": "^23.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2"
  },
  "peerDependencies": {
    "react": "^15 || ^16"
  }
}
